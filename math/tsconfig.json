{
	"compilerOptions": {
		"outDir": "./dist/",
    "declaration": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "es5",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": [ "src" ],
	"exclude": ["node_modules", "dist"]
}