{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"overrides": [
		{
			"files": [
				"client/index.js",
				"client/routes/**/*.js"
			],
			"rules": {
				"@typescript-eslint/no-var-requires": "off"
			}
		}
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"ignorePatterns": [
		"**/node_modules/*",
		"**/dist/*",
		"webpack.config.js"
	],
	"rules": {
		"@typescript-eslint/no-non-null-assertion": "off"
	}
}
